<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="24dp"
    android:scrollbars="none"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/bg_premium"
            app:layout_constraintDimensionRatio="455:531"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            android:visibility="invisible"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_200"
            android:background="@drawable/bg_content_premium"
            app:layout_constraintTop_toBottomOf="@id/iv_close">

            <TextView
                android:id="@+id/tvHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="@dimen/dimen_24"
                android:gravity="center_horizontal"
                android:text="Try Premium Version"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFeature1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_check"
                android:drawablePadding="12dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:text="Unlock All Features"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeadline" />

            <TextView
                android:id="@+id/tvFeature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:drawableStart="@drawable/ic_check"
                android:drawablePadding="12dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:text="Remove All Ads"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@id/tvFeature1"
                app:layout_constraintTop_toBottomOf="@id/tvFeature1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvFeature2"
                tools:itemCount="3"
                tools:listitem="@layout/item_purchase_product_normal" />

            <TextView
                android:id="@+id/tvNoPaymentNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="@string/no_payment_now_cancel_anytime"
                android:textColor="#000000"
                android:textSize="12dp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/rvProductItems" />

            <TextView
                android:id="@+id/tvContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="69dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:background="@color/white"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="Continues"
                android:textColor="@color/black"
                android:textSize="22dp"
                app:layout_constraintTop_toBottomOf="@id/tvNoPaymentNow" />

            <LinearLayout
                android:id="@+id/llPrivacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:divider="@color/white"
                android:orientation="horizontal"
                android:showDividers="middle"
                app:layout_constraintEnd_toEndOf="@id/tvContinue"
                app:layout_constraintStart_toStartOf="@id/tvContinue"
                app:layout_constraintTop_toBottomOf="@id/tvContinue">

                <TextView
                    android:id="@+id/tvTermOfUse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_horizontal"
                    android:paddingVertical="8dp"
                    android:text="Term &amp; Conditions"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvPolicy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_horizontal"
                    android:paddingVertical="8dp"
                    android:text="Privacy policy"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPolicyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="start"
                android:paddingVertical="8dp"
                android:text="@string/policy_text"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llPrivacy" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
